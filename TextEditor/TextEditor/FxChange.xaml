<Window x:Class="TextEditor.FxChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="FxChange" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="60"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox Name="txt1" Grid.Column="0" Margin="10" FontSize="15" TextWrapping="WrapWithOverflow"></TextBox>
        <TextBox Name="txt2" Grid.Column="2" Margin="10" FontSize="15" TextWrapping="WrapWithOverflow"></TextBox>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="b1" Content="&gt;" Grid.Column="1" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"></Button>
            <Button Name="b2" Content="&lt;" Grid.Column="1" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"></Button>
        </StackPanel>
    </Grid>
</Window>
