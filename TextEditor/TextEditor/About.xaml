<Window x:Class="TextEditor.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="About" Height="250" Width="400" Background="Gray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Name="l1" Grid.Row="0" Margin="5" Background="BlanchedAlmond" FontSize="25" FontStyle="Italic" HorizontalAlignment="Center"></Label>
        <TextBlock Name="txt" Grid.Row="1" Margin="10" Background="Beige" FontSize="18" FontWeight="DemiBold"></TextBlock>
    </Grid>
</Window>
